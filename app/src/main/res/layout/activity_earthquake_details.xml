<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:maxLines="3"
            android:paddingBottom="16dp"
            android:textAppearance="?android:textAppearanceLarge" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:paddingBottom="16dp"
            android:text="@string/perceived_strength"
            android:textAllCaps="true"
            android:textAppearance="?android:textAppearanceMedium" />

        <TextView
            android:id="@+id/perceived_magnitude"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/magnitude_circle_big"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:textSize="100sp" />

        <TextView
            android:id="@+id/depth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:paddingTop="16dp"
            android:textAllCaps="true"
            android:textAppearance="?android:textAppearanceMedium"
            tools:text="depth: 2.5 km" />

        <TextView
            android:id="@+id/tsunami_alert"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:paddingTop="16dp"
            android:textAllCaps="true"
            android:textAppearance="?android:textAppearanceMedium"
            tools:text="tsunami alert issued: yes" />

        <TextView
            android:id="@+id/number_of_people"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:paddingTop="16dp"
            android:textAllCaps="true"
            android:textAppearance="?android:textAppearanceMedium"
            tools:text="5 people felt it" />

        <Button
            android:id="@+id/maps_activity_button"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:onClick="open_maps_activity"
            android:text="Show on map" />

    </LinearLayout>

</ScrollView>
